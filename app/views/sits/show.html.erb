<% if flash[:notice] -%>
  <div class="alert alert-success"><%= flash[:notice] %></div>
<% end %>

<%= render :partial => 'shared/sit-full', :locals => { :sit => @sit } %>

<% if @sit.disable_comments %>
  <%= "Comments disabled for this sit." %>
  
<% else %>
  <h2 id="comments">Comments</h2>
  <div id="comments">
  <% @sit.comments.each do |comment| %>      
    <%= comment.body %><br>
    <%= avatar(@sit.user) %> <%= username(@sit.user) %> <%= time_ago_in_words(comment.created_at) %> ago</p>
  <% end %>
  </div>
  
  <h1>Post Comment</h1>
  
  <%= form_for [@sit, @sit.comments.build] do |f| %>
    <%= f.label :comment, 'Your comment' %>:
    <%= f.text_field :body %><br />
    <%= f.submit %>
  <% end %>
<% end %>
