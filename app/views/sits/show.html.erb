<header>
  <h1 class="sit-title"><%= @sit.full_title %></h1>
</header>

<div class="body"><%= @sit.body.html_safe %></div>
  <% if current_user and @sit.mine?(current_user) %>
    <div class="my-actions"><%= link_to 'Edit', edit_sit_path(@sit), :class => 'btn btn-mini' %></div>
  <% end %>

<% if !@sit.disable_comments %>
  <div class="comments">
    <% if !@sit.comments.empty? %>
      <h3>Comments</h3>
    <% end %>
    <div class="comments-list">
      <% @sit.comments.each do |comment| 
        @comment = comment %>
        <%= render 'comments/comment' %>
      <% end %>
    </div>

    <% if user_signed_in? %>
    <div class="new-comment">
      <%= simple_form_for [@sit, @sit.comments.build], :remote => 'true' do |f| %>
        <%= f.input :body, :label => false, :input_html => { :rows => 3, :class => 'rich-textarea span12', :placeholder => 'Have your say.' } %>
        <%= f.submit 'Add comment', :class => 'btn btn-primary pull-right' %>
      <% end %>
    </div>
    <% end %>

  <% end %>
</div>