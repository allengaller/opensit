<%= simple_form_for(@sit, :html => { :class => 'form-horizontal'}) do |f| %>
  <% if @sit.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@sit.errors.count, "error") %> prohibited this sit from being saved:</h2>

      <ul>
      <% @sit.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.input :title %>
  
  <%= f.input :s_type, :collection => [['Sit', 0], ['Diary', 1], ['Article', 2]], :as => :radio_buttons, :item_wrapper_class => 'inline' %>
  
  <%= f.input :duration, :input_html => { :value => current_user.default_sit_length } %>
  
  <%= f.input :body, :input_html => { :rows => 10, :class => "span6" } %>

  <%= f.input :disable_comments %>

  <%= f.submit %>
  
<% end %>
