<div class="section sign-in">
	<div class="well">
		<h1>Sign in</h1>

		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

 		<% if flash.any? %>
			<div class="alert alert-danger">
			<%- flash.each do |name, msg| -%>
	          <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
			<%- end -%>
			</div>
		<% end %>

		  <div><%= f.email_field :email, placeholder: 'Your email' %></div>

		  <div><%= f.password_field :password, placeholder: 'Password' %></div>

		  <% if devise_mapping.rememberable? -%>
		    <div class="remember"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
		  <% end -%>

		  <%= link_to 'Forgot your passsword?', '/users/password/new' %>

		  <div><%= f.submit "Sign in", :class => 'pull-right btn btn-primary btn-large' %></div>
		<% end %>
	</div>
</div>

