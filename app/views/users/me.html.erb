<% provide(:title, 'Home') %>
<div class="section me">

  <section class="sidebar">
    <%= render :partial => 'shared/sidebar-me' %>
  </section>
  
  <section class="content socialstream">
    <%= render :partial => 'shared/me-pills' %>

    <% if @feed_items.empty? %>
    <div class="well well-large empty-message">
        <h1>You're not following anyone yet!</h1>
        <p>Once you follow someone you'll be able to see all their updates here.</p>
      </div>
    <% end %>
    
    <% @feed_items.each do |sit| %>

      <%= render :partial => 'shared/sit-teaser', :locals => { :sit => sit } %>

    <% end %>

    <div class="pagination-container">
      <%= will_paginate @feed_items, :class => 'pagination pagination-centered' %>
    </div>
  </section>

</div>
