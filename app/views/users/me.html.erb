<% if @feed_items.empty? %>
	<%= render 'shared/user_summary' %>

	<div class="col-lg-9">
		<div class="message-box welcome-box">
		  <h2>Try following someone!</h2>
		  <% @users_to_follow.each do |user| %>
		  	<%= render :partial => 'shared/user', :locals => { :u => user } %>
		  <% end %>
		  <div class="my-actions">
		  	<a href="/" class="btn btn-lg btn-primary">Ok, done!</a>
		  </div>
		</div>
	</div>
<% else %>
	<div class="sit-container">

		<%= render 'shared/user_summary' %>

		<% @feed_items.each do |sit| %>
		  <%= render :partial => 'shared/sit_teaser_block', :locals => { :sit => sit, :width => '3' } %>
		<% end %>
	</div>

	<div class="pagination-container">
	  <%= will_paginate @feed_items, renderer: BootstrapPagination::Rails %>
	</div>
<% end %>
