<table>
  <tr>
    <th>Username</th>
    <th>Email</th>
    <th>Password</th>
    <th>Last login</th>
    <th>Profile pic</th>
    <th>First name</th>
    <th>Last name</th>
    <th>Dob</th>
    <th>Gender</th>
    <th>City</th>
    <th>Country</th>
    <th>Who</th>
    <th>Why</th>
