<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.email %></td>
    <td><%= user.password %></td>
    <td><%= user.last_login %></td>
    <td><%= user.profile_pic %></td>
    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <td><%= user.dob %></td>
    <td><%= user.gender %></td>
    <td><%= user.city %></td>
    <td><%= user.country %></td>
    <td><%= user.who %></td>
    <td><%= user.why %></td>
    <td><%= user.style %></td>
    <td><%= user.practice %></td>
    <td><%= user.public_diary %></td>
    <td><%= user.default_sit_length %></td>
    <td><%= user.user_type %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

