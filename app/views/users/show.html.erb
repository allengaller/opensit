<div class="section view-profile">
  <p id="notice"><%= notice %></p>

  <section class="sidebar">
    <%= avatar(@user, 1) %>
    <h4><%= username(@user) %></h4>
    <%= location(@user) %>
  </section>

  <section class="content profile">
    
    <p>
      <b>Who:</b>
      <%= @user.who %>
    </p>

    <p>
      <b>Why:</b>
      <%= @user.why %>
    </p>

    <p>
      <b>Practice:</b>
      <%= @user.practice %>
    </p>

    <p>
      <b>Style:</b>
      <%= @user.style %>
    </p>

    <% @sits.each do |sit| %>
 
      <%= render :partial => 'shared/sit-teaser', :locals => { :sit => sit } %>

    <% end %>

  </section>
</div>
