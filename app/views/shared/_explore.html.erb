<div class="explore-module">
  <section class="global-sitstream">
    <h1>Global SitStream</h1>
    <hr>
    
    <% @sits.each do |sit| %>

      <%= render :partial => 'shared/sit-teaser', :locals => { :sit => sit } %>

    <% end %>
  </section> <!-- end section#global_sitstream -->

  <section class="right-column">
    <h1>Tags</h1>
    <hr>

    <div id="tag_cloud">
      <% tag_cloud Sit.tag_counts, %w[s m l] do |tag, css_class| %>
        <%= link_to tag.name, tag_path(tag.name), class: css_class %>
      <% end %>
    </div>

    <div class="new-arrivals">
      <h1>New arrivals</h1>
      <hr>
      <% for u in @newest_users %>
        <div class="user"><%= avatar(u) %> <%= username(u) %> joined <%= time_ago_in_words(u.created_at) %> ago.</div>
      <% end %>
    </div>

    <div class="recent-comments">
      <h1>Recent comments</h1>
      <hr>
      <% for c in @comments %>
        <div class="comment">
          <div class="comment-info"><%= username(c.user) %> commented on <%= username(c.sit.user) %>'s <%= link_to c.sit.full_title, sit_path(c.sit_id) %> (<%= time_ago_in_words(c.created_at) %> ago) </div>
          <blockquote><%= c.body.html_safe %></blockquote>
        </div>
      <% end %>
    </div>
  </section>
</div>