<article class="sit-teaser">
  
  <div class="side">
    <%= avatar(sit.user) %>
  </div>
  
  <div class="sit-content">
    
    <div class="body"><%= sit.body %></div>
  
    <header>
      <% if sit.s_type == 0 %>
        <i class="icon-fire"></i> <%= username(sit.user) %> logged <%= link_to "#{sit.duration} minutes", sit, :class => 'sit-link' %> of practice,
      <% elsif (sit.s_type == 1) %>
        <i class="icon-book"></i> <%= username(sit.user) %> added a new diary: <%= link_to "#{sit.title}", sit, :class => 'sit-link' %>,
      <% else %>
        <i class="icon-beaker"></i> <%= username(sit.user) %> added a new article: <%= link_to "#{sit.title}", sit, :class => 'sit-link' %>,
      <% end %>
    
      <%= time_ago_in_words(sit.created_at) %> ago
      <%= link_to 'Edit', edit_sit_path(sit) %>
      <%= link_to 'Destroy', sit, confirm: 'Are you sure?', method: :delete %>
    </header>
    
    <div class="sit-meta">
      <i class="icon-comments"></i> <%= link_to "Comments (#{sit.comments.count})", sit_path(sit, :anchor => "comments") %>
      <i class="icon-heart"></i> <%= link_to "Add to favourites", '#' %>
      <i class="icon-share"></i> <%= link_to "Share", '#' %>
    </div> <!-- end .sit-meta -->

  </div> <!-- end .sit-content -->
</article>