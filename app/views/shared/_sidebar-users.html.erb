<% if controller.action_name.in? ['my_sits'] %>
	<%= render 'shared/me-header' %>
	<div class="nav-module my-timeline">
		<% if !@user.sits.empty? %>
			<ul>
			<%= timeline(@links) %>
			</ul>
		<% else %>
			<div class="well no-sits-yet">
				<p>You will be able to browse your sits by month and year here.</p>
			</div>
		<% end %>
	</div>

<% elsif @my_favs %>
	 <%= render 'shared/me-header' %>

<% elsif controller.action_name.in? ['profile', 'show', 'following', 'followers'] %>
<%= render 'shared/sidebar-sits' %>
	
<% else %>
	<%= render 'shared/me-header' %>
	<div class="nav-module my-latest">
		<% if @my_latest.empty? %>
			<div class="add-a-sit"><%= link_to '<i class="icon-plus"></i> Add your first sit'.html_safe, new_sit_path %></p>
		<% else %>
			<h4>My Recent Activity</h4>
			<% for sit in @my_latest %>
				<article class="sit-teaser">
					<div class="title">
						<% if sit.s_type == 0 %>
							<i class="icon-user"></i>
						<% else %>
							<i class="icon-book"></i>
						<% end %>
						<%= teaser_title(sit, 'latest') %>
					</div>
					<div class="body">
						<%= teaser(sit, 100) %>
					</div>
					<div class="date muted">
						<%= time_ago_in_words(sit.created_at) %> ago
					</div>
				</article>
			<% end %>
		<% end %>
	</div>
<% end %>
