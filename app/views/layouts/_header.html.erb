    <nav class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <%= link_to 'OpenSit', root_path, :class => 'brand' %>
         <% if user_signed_in? %>
          <a class="pull-left btn btn-primary" href="/sits/new"><i class="icon-plus icon-white"></i> New Sit</a>
