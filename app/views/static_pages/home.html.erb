<section class="front-page">
  
  <% if !user_signed_in? %>
  
  <div class="row-fluid">
  
  <section id="branding" class="span12">
    
    <div class="hero-unit">
        <h1>Where meditators meet.</h1>
        <p>OpenSit is a place where ordinary people who engage in some form of regular meditation practice can record their experiences and connect with eachother.</p>
        <p><%= link_to "Join today!", new_user_registration_path, { :class => "btn btn-primary btn-large" } %></p>
    </div>
    
    <div id="register-button">

    </div>  
    
    <div class="row-fluid">
      <div class="span4"><h1>1</h1>Record your practice and insights; start your own diary today.</div>
      <div class="span4"><h1>2</h1>Connect with other contemplatives.</div>
      <div class="span4"><h1>3</h1>Learn more about OpenSit.</div>
    </div>
    
  </section> <!-- end section#branding -->
  
  </div>
  
  <div class="row-fluid">
  
  <section id="global-sitstream" class="span12">
    <h2>Global SitStream</h2>
    <h3>Join 240,000 users logging over 1 million hours of practice</h3>
    
    <% @sits.each do |sit| %>
 
      <%= render :partial => 'shared/sit-teaser', :locals => { :sit => sit } %>

    <% end %>
    
  </section> <!-- end section#global_sitstream -->
  
  </div>
  
  <% else %>

  <div class="row-fluid">
  
  <section class="socialstream">
    <h1>SocialStream</h1>
    <p>Latest updates from all of the <%= link_to "people I follow", '#' %>.</p>
    
    <% @sits.each do |sit| %>
 
      <%= render :partial => 'shared/sit-teaser', :locals => { :sit => sit } %>

    <% end %>
  </section>
  
  </div>
  
  <% end %>
</div> <!-- end section.front-page -->