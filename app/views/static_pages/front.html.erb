<div class="section front-page">
  
  <% if !user_signed_in? %>
    <section id="branding">
      
      <div class="hero-unit">
        <h1>Where meditators meet.</h1>
        <p>OpenSit is a place where people who meditate can record their experiences and connect with each other.</p>
        <p><%= link_to "Join today!", new_user_registration_path, { :class => "btn btn-primary btn-large" } %></p>
      </div>
      
      <div class="three-panes">
        <div><h2>Start streaming today</h2>What do you practice and how has it changed you? Share your practice or start a private stream.</div>
        <div><h2>Connect with others</h2>Follow friends and discover new practitioners.</div>
        <div><h2>Improve your practice</h2>Be inspired by others, support each other, and give your practice a boost.</div>
      </div>
      
    </section> <!-- end section#branding -->
  <% end %>
  
  <section id="global-sitstream">
    <h1>Global SitStream</h1>
    
    <% @sits.each do |sit| %>
 
      <%= render :partial => 'shared/sit-teaser', :locals => { :sit => sit } %>

    <% end %>
  </section> <!-- end section#global_sitstream -->

</div> <!-- end div.front-page -->